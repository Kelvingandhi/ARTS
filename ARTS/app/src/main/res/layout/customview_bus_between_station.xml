<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:weightSum="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.1">

            <ImageView
                android:layout_width="150px"
                android:layout_height="150px"
                android:id="@+id/bus_search_icon"
                android:src="@drawable/mipmap"
                />

            <TextView
                android:id="@+id/bus_no_bbsview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Textview"
                android:background="@color/blue_50"
                android:textColor="@color/amber_50"
                android:layout_marginTop="5dp"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.5">


            <TextView
                android:id="@+id/bus_name_bbsview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Textview"
                />

            <TextView
                android:id="@+id/source_name_bbsview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Textview"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50px"
                android:layout_height="50px"
                android:id="@+id/arrow_icon"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow_down"
                />

            <TextView
                android:id="@+id/desti_name_bbsview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Textview"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.3">

            <TextView
                android:id="@+id/days_bbsview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Textview"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/arri_time1_bbsview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Textview"
                android:layout_marginTop="10dp"
                android:gravity="right"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50px"
                android:layout_height="50px"
                android:id="@+id/arrow_icon1"
                android:src="@drawable/arrow_down"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"/>

            <TextView
                android:id="@+id/arri_time2_bbsview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Textview"
                android:gravity="right"/>




        </LinearLayout>

    </LinearLayout>

</LinearLayout>