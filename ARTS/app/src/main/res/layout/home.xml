<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context="com.example.soham.fragment.HomeFragment">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                    android:weightSum="1.0">

                        <Button
                        android:id="@+id/button3"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"

                            android:textColor="@color/grey_300"
                            android:background="@color/colorPrimary"
                            android:text="Live Bus Status"
                            android:layout_weight=".5"
                            android:layout_marginRight="2dp"

                            />



                         <Button
                             android:layout_width="160dp"
                             android:layout_height="match_parent"
                             android:text="Live Station Status"
                             android:textColor="@color/grey_300"
                             android:background="@color/colorPrimary"
                        android:id="@+id/station_status"
                             android:layout_marginLeft="2dp"

                        android:layout_gravity="right"
                             android:layout_weight=".5"
                             />

                </LinearLayout>

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1.0">
                            <Button
                                android:id="@+id/button2"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/grey_300"
                                android:background="@color/colorPrimary"
                                android:layout_weight=".5"
                                android:layout_marginRight="2dp"

                                android:text="bus between stations" />


                                <Button
                                 android:id="@+id/button9"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                    android:textColor="@color/grey_300"
                                    android:background="@color/colorPrimary"

                                android:layout_marginLeft="2dp"
                                    android:layout_weight=".5"
                                android:text="Fair Inquiry" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1.0">
                            <Button
                                android:id="@+id/button7"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/grey_300"
                                android:background="@color/colorPrimary"

                                android:layout_marginRight="2dp"
                                android:layout_weight=".5"
                                android:text="ticket generate"/>
                            <Button
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/grey_300"
                                android:background="@color/colorPrimary"
                                android:text="View Booking"
                                android:layout_weight=".5"
                                android:layout_marginLeft="2dp"
                                android:id="@+id/button8"
                                />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1.0">
                            <Button
                                android:id="@+id/button6"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/grey_300"
                                android:background="@color/colorPrimary"

                                android:layout_weight="0.5"
                                android:layout_marginRight="2dp"
                                android:text="New Bus Action" />
                            <Button
                                android:id="@+id/button5"
                                android:layout_width="160dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/grey_300"
                                android:background="@color/colorPrimary"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="0.5"
                                android:text="Cancel Bus Action " />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:weightSum="1.0">
                            <Button
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:textColor="@color/grey_300"
                                android:background="@color/colorPrimary"
                                android:text="Lost Item Request"
                                android:id="@+id/lost_item_req"
                                android:layout_marginRight="2dp"
                                android:layout_weight="0.5"
                                android:layout_gravity="center_horizontal" />
                    </LinearLayout>






            </LinearLayout>
        </ScrollView>




    </LinearLayout>





</android.support.design.widget.CoordinatorLayout>
