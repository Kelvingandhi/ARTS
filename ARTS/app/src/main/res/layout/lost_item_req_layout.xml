<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/landfjour_date"
            android:hint="Enter Journey Date"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/landbusid"
                android:hint="select bus id"/>

            <Spinner
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:id="@+id/bus_id_spinner"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/landf_item_name"
            android:hint="Item Name"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/landf_item_descri"
            android:layout_gravity="center_vertical"
            android:hint="Item Description"
            android:layout_weight="1" />


        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:id="@+id/landf_req_btn"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@color/primary"/>

    </LinearLayout>



</LinearLayout>
